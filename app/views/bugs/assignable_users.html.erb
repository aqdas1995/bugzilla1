<div class="col-lg-12">
    <table class="table users-table table-striped">
        <thead>
            <tr>
                <th colspan="4">
                    <h3>Users</h3>
                </th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.user_type %></td>
                    <td>
                        <button class="btn btn-primary btn-sm" onclick="AssignFunc('<%= user.id %>', '<%= @bug.id %>')">Add to bug</button>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
