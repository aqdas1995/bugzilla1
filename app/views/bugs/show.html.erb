<div class="col-lg-12 ">
    <section class="col-lg-7">
        <h1>Project Title: <em><%= @bug.project.title %></em></h1>
        <h3>Bug Title: <em> <%= @bug.title %> </em></h3>
        <h3>Bug Type: <em><%= @bug.bug_type %></em> </h3>
        <h3>Deadline: <em><%= @bug.deadline %></em></h3>
        <h3>Status: <em><%= @bug.status %></em></h3>
    </section>

    <table class="table users-table table-striped">
        <thead>
            <tr>
                <th colspan="3">
                    <h3>Added Users</h3>
                </th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% @bug.bug_users.each do |bu| %>
                <tr>
                    <td> <%= bu.user.name %> </td>
                    <td> <%= bu.user.email %> </td>
                    <td>
                        <button class="btn btn-danger btn-sm" onclick="removeUser('<%= bu.id %>')">Remove</button>
                    </td>
                </tr>    
            <% end %>
        </tbody>
    </table>


</div>