<div class="custom-form">
  <div class="text-center" style="padding:50px 0">
    <div class="logo">login</div>
    <!-- Main Form -->
    <div class="login-form-1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), id: "login-form", class: "text-left") do |f| %>
        <div class="login-form-main-message"><%= devise_error_messages! %></div>
        <div class="main-login-form">
          <div class="login-group">
            <div class="form-group">
              <label for="lg_username" class="sr-only">Username</label>
              <%= f.text_field :email, autofocus: true, id:"lg_username", class: "form-control", placeholder: "email" %>
            </div>
            <div class="form-group">
              <label for="lg_password" class="sr-only">Password</label>
               <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "lg_password", placeholder: "password" %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="form-group login-group-checkbox">
                <%= f.check_box :remember_me, id:"lg_remember" %>
                <label for="lg_remember">remember</label>
              </div>
            <% end %>
          </div>         
          <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
        </div>
        <div class="etc-login-form">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
    <!-- end:Main Form -->
  </div>
</div>
